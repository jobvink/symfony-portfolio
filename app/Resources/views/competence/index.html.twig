<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Competenties</h2>
                <h3 class="section-subheading text-muted">Hieronder staan alle skills en vaardigheden die ik heb, en
                    alle technieken waar ik mee heb gewerkt.</h3>
            </div>
        </div>
        <div class="row text-center">
            {% for competence in competences %}
                <div class="col-12 col-md-6 col-lg-4 top-buffer">
                        <span class="competenties-circle">
                            <img src="{{ asset('img/Rolling.gif') }}" data-src="{{ asset('uploads/competences/' ~ competence.logo) }}"
                                 alt="{{ competence.name }}">
                        </span>
                    <h4 class="service-heading">{{ competence.name }}</h4>
                    <p class="text-muted">{{ competence.description }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
