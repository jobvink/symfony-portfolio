{% set standalone = standalone ?? false %}
{% extends standalone ? 'base.html.twig' : 'null.html.twig' %}

{% block body %}

    <div class="col-12 col-md-6 col-lg-4 top-buffer competenties-item">
        {% if editor %}
            <input type="file" id="logo_input_{{ iter }}" style="display: none;">
        {% endif %}
        <span class="competenties-circle edit-image"
              data-img="logo_{{ iter }}"
              data-input="logo_input_{{ iter }}"
              data-path="{{ path('competence_edit', {'id':competence.id}) }}">
            <img id="logo_{{ iter }}"
                 src="{{ asset('img/Rolling.gif') }}"
                 data-src="{{ asset('uploads/competences/' ~ competence.logo) }}"
                 alt="{{ competence.name }}">
        </span>
        <h4 {% if editor %}
            data-type="name"
            data-path="{{ path('competence_edit', {'id':competence.id}) }}"
        {% endif %} class="service-heading{{ editor ? ' editable' }}">{{ competence.name }}</h4>
        <p {% if editor %}
            data-type="description"
            data-path="{{ path('competence_edit', {'id':competence.id}) }}"
        {% endif %} class="text-muted{{ editor ? ' editable' }}">{{ competence.description }}</p>
        {% if editor %}
        {{ form_start(delete) }}
        <input type="submit" value="Remove">
        {{ form_end(delete) }}
            {% endif %}
    </div>

{% endblock %}