{% set standalone = standalone ?? false %}
{% extends standalone ? 'base.html.twig' : 'null.html.twig' %}

{% block body %}
    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Tijdlijn</h2>
                    <h3 class="section-subheading text-muted">Een overzicht van mijn werkervaring.</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <ul class="timeline">
                        {% set iter = 0 %}
                        {% for timeline in timelines %}
                            {% set delete = editor ? timelinedeletes[iter] : null %}
                            {% include ':timeline:show.html.twig' %}
                            {% set iter = iter + 1 %}
                        {% endfor %}
                        {% if editor %}
                            {% include 'timeline/timeline.html.twig' %}
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
