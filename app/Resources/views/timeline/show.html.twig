{% extends 'base.html.twig' %}

{% block body %}
    <h1>Timeline</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ timeline.id }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ timeline.logo }}</td>
            </tr>
            <tr>
                <th>Begindate</th>
                <td>{% if timeline.beginDate %}{{ timeline.beginDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{% if timeline.endDate %}{{ timeline.endDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Employer</th>
                <td>{{ timeline.employer }}</td>
            </tr>
            <tr>
                <th>Function</th>
                <td>{{ timeline.function }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ timeline.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('timeline_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('timeline_edit', { 'id': timeline.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
