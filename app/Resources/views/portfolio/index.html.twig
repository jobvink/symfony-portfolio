{% extends 'base.html.twig' %}

{% block body %}
    <section id="portfolio" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Portfolio</h2>
                    <h3 class="section-subheading text-muted">Een overzicht van al mijn projecten.</h3>
                </div>
            </div>
            <div class="row">
                {% for portfolio in portfolios %}
                <div class="col-md-4 col-sm-6 portfolio-item">
                    <a href="#portfolioModal{{ portfolio.id }}" class="portfolio-link" data-toggle="modal">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img src="{{ asset('img/Rolling.gif') }}" data-src="{{ asset('uploads/portfolio/' ~ portfolio.image) }}" alt="{{ portfolio.title }}">
                    </a>
                    <h4>{{ portfolio.title }}</h4>
                    <p class="text-muted">{{ portfolio.subtitle }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
