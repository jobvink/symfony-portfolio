{% set standalone = standalone ?? false %}
{% extends standalone ? 'base.html.twig' : 'null.html.twig' %}

{% block body %}
    <section id="portfolio" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Portfolio</h2>
                    <h3 class="section-subheading text-muted">Een overzicht van al mijn projecten.</h3>
                </div>
            </div>
            <div class="row" style="display: flex; flex-wrap: wrap;">
                {% for portfolio in portfolios %}
                    {% include ':portfolio:show.html.twig' %}
                {% endfor %}
                {% if editor %}
                {% set form = portfolioform %}
                {% include ':portfolio:new.html.twig' %}
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}
